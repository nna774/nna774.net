---
pageable: true
per_page: 10
layout: blog_layout
---
<% if paginate && num_pages > 1 %>
  <%= partial(:pageChain) %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <article title="<%= article.title %>">
    <%= partial(:articleHeader, :locals => { :current_article => article, :isIndex => true }) %>
    <div class="articleBody">
      <%= article.body %>
    </div>
  </article>
<% end %>

<% if paginate %>
  <%= partial(:pageChain) %>
<% end %>
