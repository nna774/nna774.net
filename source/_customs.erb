<% if not current_page.data.customCSS.nil? %>
  <% current_page.data.customCSS.each_with_index do |css, i| %>
    <% css_path = Middleman::Application::root + "/" + source + "/" + css_dir + "/" + css + ".css" %>
    <% if File.exist?(css_path) && File.size(css_path) < minify_size %>
      <style><%= `cat #{css_path} | tr -d "\n\t" | sed -e 's/  */ /g' | sed -e 's/ \\?\\([{;,:>]\\) \\?/\\1/g'` %></style>
    <% else %>
      <%= stylesheet_link_tag css %>
    <% end %>
  <% end %>
<% end %>

<% if not current_page.data.customJS.nil? %>
  <% current_page.data.customJS.each_with_index do |js, i| %>
    <%= javascript_include_tag js %>
  <% end %>
<% end %>

<% if not current_page.data.customCSSInline.nil? %>
  <style type="text/css">
    <!--
      <%= current_page.data.customCSSInline %>
    -->
  </style>
<% end %>
